---
type Props = {
  count: number;
};

const { count } = Astro.props;
---

<div class="rating rating-lg rating-half">
  {
    Array(10)
      .fill("")
      .map((s, i) => {
        const classes =
          "bg-yellow-300 mask mask-star-2 mask-half-" +
          ((i % 2 === 0 ? 1 : 0) + 1);
        const checked = i === count * 2 ? "checked" : false;
        return <input type="radio" class={classes} checked={checked} />;
      })
  }
</div>
